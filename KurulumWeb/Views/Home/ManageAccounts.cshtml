                                <button aria-label="Close" class="btn-close close-button" data-bs-dismiss="modal" type="button" id="closeModal" style="color:red"><i class="fas fa-times"></i></button>
                            </div>

                            <!-- Modal body -->
                            <div class="modal-body">
